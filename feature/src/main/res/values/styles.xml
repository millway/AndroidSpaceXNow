<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ToggleTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/navigation_bar_txt_color</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/navigation_bar_txt_color</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/navigation_bar_txt_color</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>

    <style name="MySwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColorPrimaryDisableOnly">#b71c1c</item>
        <item name="android:colorControlActivated">#1b5e20</item>
        <item name="android:colorForeground">#f57f17</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
</resources>