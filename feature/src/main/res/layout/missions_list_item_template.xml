<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/missions_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/missions_item_imageview"
                android:layout_width="99dp"
                android:layout_height="139dp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/missions_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:paddingTop="0dp"
                android:text="Merah Putih (Telkom-4)"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/missions_item_imageview"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/missions_client_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:paddingTop="0dp"
                android:text="Telkom Indonesia"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/missions_item_imageview"
                app:layout_constraintTop_toBottomOf="@+id/missions_item_title" />

            <TextView
                android:id="@+id/missions_launch_complex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:paddingTop="0dp"
                android:text="CCAFS, SLC-40"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/missions_item_imageview"
                app:layout_constraintTop_toBottomOf="@+id/missions_client_company_name" />

            <TextView
                android:id="@+id/missions_rocket_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="F9 B5"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/missions_item_imageview"
                app:layout_constraintTop_toBottomOf="@+id/missions_launch_complex" />

            <TextView
                android:id="@+id/missions_launch_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="NET sat, 4th Aug 2018"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/missions_item_imageview"
                app:layout_constraintTop_toBottomOf="@+id/missions_rocket_type" />

            <TextView
                android:id="@+id/missions_time_to_launch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="3 days, 13 hours"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/missions_item_title"
                app:layout_constraintStart_toEndOf="@+id/missions_item_imageview"
                app:layout_constraintTop_toBottomOf="@+id/missions_launch_time" />

            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/holo_orange_dark"
                android:gravity="right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>